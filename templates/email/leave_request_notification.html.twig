{% extends '@email/default/notification/body.html.twig' %}
{% block content %}
  Demandeur : {{ leaveRequest.userName }}<br />
  <p> Demande de cong√© : du
      {{ leaveRequest.startDate | date('d/m/Y') }} au {{ leaveRequest.endDate | date('d/m/Y') }}
  </p>
  <p> Raison : {{ leaveRequest.reason }} </p>
{% endblock %}
{% block action %}
  <spacer size="16"></spacer>
